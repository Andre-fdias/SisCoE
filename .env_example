# ==================================================
#        EXEMPLO DE ARQUIVO DE AMBIENTE (.env)
# ==================================================
# Copie este arquivo para .env e preencha os valores necessários.
# As senhas aqui são apenas para desenvolvimento local com Docker.
# NUNCA use estas senhas em produção.

# --- Configurações do Django ---
# Mude esta chave para um valor único e secreto em produção
SECRET_KEY=django-insecure-siscoe-dev-key-change-me
# Mude para False em produção
DEBUG=True
# Em produção, coloque os domínios do seu site, ex: 'meusite.com,www.meusite.com'
ALLOWED_HOSTS=localhost,127.0.0.1,web

# --- Configurações do Banco de Dados (PostgreSQL) ---
# Estes valores correspondem aos serviços no docker-compose.yml
DB_ENGINE=django.db.backends.postgresql
DB_NAME=siscoe_db
DB_USER=siscoe_user
DB_PASSWORD=siscoe_password
DB_HOST=db
DB_PORT=5432

# --- Configurações do Redis / Celery / Channels ---
# Aponta para o serviço 'redis' no docker-compose.yml
REDIS_HOST=redis
REDIS_PORT=6379
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CHANNEL_LAYERS_HOST=redis://redis:6379/1

# --- Configurações de Email (Opcional, para teste) ---
# Para usar o Brevo (Sendinblue), preencha os valores abaixo.
# Se não, os emails serão impressos no console (se DEBUG=True).
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp-relay.brevo.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=nao-responda@siscoe.com
DEFAULT_FROM_NAME=SisCoE

# --- Chaves de API (Opcional) ---
GROQ_API_KEY=
WEATHER_API_KEY=
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
CHAT_ENCRYPTION_KEY=\nDOCKER_USERNAME=localuser
